#!/usr/bin/octave -q

# Set path
addpath(fullfile(pwd,'..','src'));
addpath(fullfile(pwd,'suites'));
addpath(fullfile(pwd,'suites','private')); % octave does not find private data files

# Select functions to run
suite = @ACID;
allTests = 1:numel(suite(0));

m2tFailing   = [29:31]; % FIXME: these are actual M2T problems 
nondeterministic = []; %FIXME: these should be made deterministic 
plotFailing  = [74 81:83 95]; % these plots fails anyway
skippedTests = [9 12 42:44 46:49 54 59 62 71 72 75 76 80 87:91]; % these are skipped anyway.

testsToRun = setdiff(allTests, [plotFailing skippedTests m2tFailing]);

# Run tests
testMatlab2tikz('testFunctionIndices', testsToRun,...
                'testsuite',           suite, ...
                'report',              'travis', ...
                'exitAfterTests',      true);